
<table   class="table table-striped table-bordered table-condensed">
    <thead>
        <tr data-bind="click: sortTable"><th data-column="Id">ID <span data-bind="attr:{class: currentColumn()=='Id'?'isVisible':'isHidden'}"><i data-bind="attr:{class:iconType}"></i></span></th><th>Имя</th><th>Фамилия</th></tr>
     
    </thead>
    <tbody data-bind="foreach: currentPage">
        <tr>
            <td data-bind="text: Id"></td>
            <td class="firstName" data-bind="text: FirstName"></td>
            <td data-bind="text: LastName"></td>
            <td><input type="button" class="btn btn-danger btn-xs" value="Редактировать" data-bind="click: editUserDisplay" /></td>
            <td><input type="button" class="btn btn-danger btn-xs" value="Удалить" data-bind="click: $parent.removeUsers" /></td>
        </tr>
    </tbody>
    <tfoot>
        <tr>
            <td>
                Отобразить на странице:
                <select id="pageSizeSelector" data-bind="value: pageSize">
                    <option value="5">5</option>
                    <option value="10">10</option>
                    <option value="15">15</option>
                    <option value="20">20</option>
                    <option value="25">25</option>
                    <option value="30">30</option>
                </select>
            </td>
            <td colspan="6">
                <button data-bind="click: previousPage" class="btn btn-sm"><i class="glyphicon glyphicon-step-backward"></i></button>
                Страница&nbsp;<label data-bind="text: currentPageIndex() + 1" class="badge"></label>
                <button data-bind="click: nextPage" class="btn btn-sm"><i class="glyphicon glyphicon-step-forward"></i></button>
            </td>
        </tr>
    </tfoot>
</table>
<br>


